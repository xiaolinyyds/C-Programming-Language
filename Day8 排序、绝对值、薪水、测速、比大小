*//* 取绝对值法1
int main()
{
	int num;
	scanf("%d", &num);
	if (num > 0) {
		printf("绝对值为:%d", num);
	}
	else {
		printf("绝对值为:%d", num * -1);
	}

	return 0;
}
*//* 取绝对值法2
int main()
{
	int num;
	printf("请输入一个数: ");
	scanf("%d", &num);
