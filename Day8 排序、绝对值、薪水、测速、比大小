*//* 周薪水
int main()
{
	int timer;//周工作时间
	float Wmoney;//周薪水
	const int WDATE = 40;//每周标准工作时间
	const float MONEY = 8.25;//每小时工资
	scanf("%d", &timer);
	if (timer > WDATE) {
		Wmoney = WDATE * MONEY + (timer - WDATE) * MONEY *1.5;
	}
	else {
		Wmoney = timer * MONEY;
	}
	printf("周薪水为:%.2f\n", Wmoney);

	return 0;
}
